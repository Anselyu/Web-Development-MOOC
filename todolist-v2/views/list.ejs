<%- include("header")-%>


<div class="box" id="heading">
    <h1><%= listTitle %></h1>
</div>
    
<div class="box">
    <%  newItems.forEach(function(item){    %>
        <form action="/delete" method="post">
            <div class="item">
                <input onChange="this.form.submit()" type="checkbox" name="itemID" value=<%= item._id %>>
                <input type="hidden" name="listType" value=<%= listTitle %>>
                <p><%= item.content %></p>
            </div>
        </form>
     
    <%  })                                  %>
    <form class = "item" action="/" method="post">
        <input type="text" name="newItem" placeholder = "Enter Your New Item" autocomplete = "off">
        <button type="submit" name="listType" value=<%= listTitle %>>+</button>
    </form>
</div>

<%- include("footer")-%>
